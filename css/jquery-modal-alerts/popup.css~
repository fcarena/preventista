}

#flash-success,#flash-error,#flash-alert,#flash-info
{
		display: none;
      position:fixed; 
      font-family:arial;
      font-size:1em;
      overflow:auto;
		
		font-family: impact, sans-serif;
		color: #fff;
		font-size: 16px;
		text-align: center;
		line-height: 1.8;
}

#flash-success
{        
		-moz-border-radius:0px 0px 12px 12px;
		-webkit-border-radius:0px 0px 12px 12px;
		border-radius:0px 0px 12px 12px;
		/*IE DOES NOT SUPPORT BORDER RADIUS*/
		-moz-box-shadow:0px 0px 12px #fffafa;
		-webkit-box-shadow:0px 0px 12px #fffafa;
		box-shadow:0px 0px 12px #fffafa;
		/*IE DOES NOT SUPPORT BLUR PROPERTY OF SHADOWS*/
		background: -moz-linear-gradient(top, #219e2d, #28bd2f);
		background: -webkit-gradient(linear, center top, center bottom, from(#219e2d), to(#28bd2f));
		background: -o-linear-gradient(top, #219e2d, #28bd2f);
		filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#219e2d', endColorstr='#28bd2f');
		/*INNER ELEMENTS MUST NOT BREAK THIS ELEMENTS BOUNDARIES*/
		/*Element must have a height (not auto)*/
		/*All filters must be placed together*/
		-ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#219e2d', endColorstr='#28bd2f')";
		/*Element must have a height (not auto)*/
		/*All filters must be placed together*/
		background: linear-gradient(top, #219e2d, #28bd2f);
		/*--IE9 DOES NOT SUPPORT GRADIENT BACKGROUNDS--*/
}

